// Import Vuetify styling
@require '~vuetify/src/stylus/main.styl'

body::-webkit-scrollbar
  width: 10px
  background-color: #f5f5f5

body::-webkit-scrollbar-thumb
  border-radius: 10px
  background-image: -webkit-gradient(
    linear,
    left bottom,
    left top,
    color-stop(1, #667db6),
    color-stop(1, #0082c8),
    color-stop(1, #0082c8),
    color-stop(1, #667db6)
  )

.page
  @extend .fade-transition

.g-blue-hydrogen
  background: linear-gradient(to right, #667db6, #0082c8, #0082c8, #667db6) !important

.g-purple-purplin
  background: linear-gradient(to right, #6a3093, #a044ff) !important

.g-green-neonLife-border-solid
  border: solid
  border-image: linear-gradient(to right, #1fa2ff, #12d8fa, #a6ffcb) 60 60 !important

.game-list-card ,.search-list-card
  .v-card
    &:hover
      @extend .g-green-neonLife-border-solid

.v-btn--active
  &:before
    background-color: transparent